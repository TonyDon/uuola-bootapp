<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.uuola.webapp.dao.SiteCfgDAO">

	<sql id="listQueryCondition">
			<if test="id!=null">and id=#{id}</if>
			<if test="name!=null">and name=#{name}</if>
	</sql>
	
	<select id="count" parameterType="SiteCfgQuery" resultType="java.lang.Integer">
        select count(*) from site_cfg where id!=0 <include refid="listQueryCondition"/>
    </select>

	<select id="range" resultType="SiteCfg" parameterType="SiteCfgQuery">
		select * from site_cfg where id <![CDATA[ <= ]]> (
			select id from site_cfg where id!=0 <include refid="listQueryCondition"/> 
			order by id desc limit #{crow}, 1
		) <include refid="listQueryCondition"/> order by id desc limit 0, #{listSize}
	</select>
	
	<select id="list" resultType="SiteCfg" parameterType="SiteCfgQuery">
		select * from site_cfg where id!=0 <include refid="listQueryCondition"/> order by id desc
	</select>
</mapper>